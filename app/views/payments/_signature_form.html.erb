



        <h2>Signature Form</h2>
  
      <%= simple_form_for @signature, url: signatures_path, method: :post do |f| %>
        
          <div class="borderd">
            <canvas class="pad" width="190" height="70"></canvas>
          </div>
          <%= f.hidden_field :signature, class: 'output' %>
          <%= f.hidden_field :payment_id, value: @payment.id %>
     
            <%= f.submit 'Done', class: 'btn btn-sm btn-primary' %>
       
      <% end %>
  

<script>
  $(document).ready(function () {
  $('#new_sign').signaturePad({
    drawOnly: true,
    lineMargin: 0,
    lineTop: 140,
    penColour: '#2D2D2D'
  });
});
</script>