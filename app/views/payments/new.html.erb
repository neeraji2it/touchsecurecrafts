
<% @page_title = "Payment" %>
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<link href="/assets/font-awesome.min.css" rel="stylesheet">
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

<div class="causesBox">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel-heading">
    <h3>Enter Payment Information</h3>
    </div>

    <%= form_for @payment do |f| %>

    <% if @payment.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @payment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="input-group">
      <span class="input-group-addon glyphicon glyphicon-shopping-usd">$</span>
      <%= f.text_field :amount, placeholder: "amount", class: "form-control input-lg", label: false %>
      <span class="input-group-addon">.00</span>
    </div><br/>

    <div class="input-group">
      <span class="input-group-addon glyphicon glyphicon-shopping-cart"><i class="fa fa-shopping-cart"></i></span>
      <%= f.text_field :product_name, placeholder: "ProductName", class: "form-control input-lg", label: false %>
    </div><br/>

    <div class="input-group">
      <span class="input-group-addon glyphicon glyphicon-user"><i class="fa fa-user"></i></span>
      <%= f.text_field :customer_name, placeholder: "Customer Name", class: "form-control input-lg", label: false %>
    </div><br/>

    <div class="input-group">
    <h4>Date of Birth</h4>
      <span class="input-group-addon glyphicon glyphicon-calendar"><i class="fa fa-calendar"></i></span>
      <%= f.text_field :date_of_birth, as: :string, input_html: { class: "datepicker" }, placeholder: "Date of Birth",:id => "datepicker", class: "form-control input-lg ", label: false %>
    </div><br/>


    <span class="input-group-addon glyphicon glyphicon-home"><i class="fa fa-home"></i></span>
    <%= f.text_field :address, placeholder: "Address", label: false %>
  </div><br/>

  <div class="input-group">
    <span class="input-group-addon glyphicon glyphicon-road"><i class="fa fa-road"></i></span>
    <%= f.text_field :city, placeholder: "City", class: "form-control input-lg", label: false %>

  </div><br/>

  <div class="input-group">
    <span class="input-group-addon glyphicon glyphicon-globe"><i class="fa fa-globe"></i></span>
    <%= f.text_field :state, placeholder: "State", class: "form-control input-lg", label: false %>
  </div><br/>

  <div class="input-group">
    <span class="input-group-addon glyphicon glyphicon-globe"><i class="fa fa-globe"></i></span>
    <%= f.text_field :post_code, placeholder: "Postcode", class: "form-control input-lg", label: false %>
  </div><br/>

  <div class="input-group">
    <span class="input-group-addon glyphicon glyphicon-flag"><i class="fa fa-flag"></i></span>
    <%= f.country_select :country, placeholder: "Country", class: "form-control input-lg", label: false, prompt: "Select Country" %>

  </div><br/>

  <div class="input-group">
    <span class="input-group-addon glyphicon glyphicon-phone"><i class="fa fa-phone"></i></span>
    <%= f.text_field :phone, placeholder: "Phone", class: "form-control input-lg", label: false %>
  </div><br/>

  <div class="input-group">
    <span class="input-group-addon glyphicon glyphicon-envelope"><i class="fa fa-envelope"></i></span>
    <%= f.text_field :email, placeholder: "Email", class: "form-control input-lg", label: false %>
  </div><br/>

  <div class="input-group">
    <span class="input-group-addon glyphicon glyphicon-credit-card"><i class="fa fa-credit-card"></i></span>
    <%= f.text_field :card_number, placeholder: "CardNumber", class: "form-control input-lg", label: false %>
  </div><br/>

  <div class="input-group">
    <span class="input-group-addon glyphicon glyphicon-calendar"><i class="fa fa-list-alt"></i></span>
    <%= f.text_field :card_expiry, placeholder: "CardExpiry", class: "form-control input-lg", label: false %>
  </div><br/>

  <div class="input-group">
    <span class="input-group-addon glyphicon glyphicon-credit-card"><i class="fa fa-credit-card"></i></span>
    <%= f.text_field :card_cvv, placeholder: "CardCvv", class: "form-control input-lg", label: false %>
  </div><br/>
</div>

<%= f.hidden_field :ip_address, :value => request.remote_ip %>

<%= f.submit "Submit", class: 'btn btn-sm btn-primary' %>
<% if current_user %>
<%= link_to 'View All Payments', payments_path, class: 'btn btn-sm btn-default pull-right' %>
<% end %>

<%end%>
</div>

<style>
  .input-group-addon {
    background-color: #eeeeee;
    border: 1px solid #cccccc;
    border-radius: 4px;
    color: #555555;
    font-size: 14px;
    font-weight: normal;
    line-height: 1;
    padding: 6px 12px;
    text-align: center;
  }


.ui-datepicker-month
{
  min-width: 20px;

}

.ui-datepicker-year
{
  min-width: 20px;

}

</style>
<script>
  $(function() {
    $( "#datepicker" ).datepicker(
    {
      dateFormat: 'dd-mm-yy',
      todayHighlight: true,
      todayBtn: 'linked',
      autoclose: true,
      maxDate: 0,
      changeMonth: true,
      changeYear: true

    }

    );
  });
</script>