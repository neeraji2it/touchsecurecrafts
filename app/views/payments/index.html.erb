<!DOCTYPE html>
<html>
    <head>
        <title><%= @site_title || "Touchsecurecrafts" %></title>
        <%= stylesheet_link_tag 'application' %>
        <%= javascript_include_tag 'application' %>
        <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
        <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==" crossorigin="anonymous">
        <%= csrf_meta_tags %>
    </head>
    <body style="padding-top: 80px;">
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container-fluid">
                <!-- brand -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse" id="registration-navbar">
                    <ul  class="nav navbar-nav navbar-left">
                        <h2><li><%= link_to "TouchsecureCrafts", "/" %></li></h2>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="btn-sm"><%= link_to "Paymnets", payments_path %></li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="row">
            <div class="container" style="width: 1290px;">
                <div style="position: relative;">
                    <%= form_tag payments_path, method: 'GET' do %>
                      <%= text_field_tag :search,'', placeholder: "#{params[:search] ? params[:search] : 'Search'}", style: "width: 290px; padding: 10px; border: 1px solid lightskyblue; border-radius: 5px;" %>
                      <%= submit_tag "Search", class: 'btn btn-sm btn-primary' %>
                      <% end %>
                  </div>

                  <div style="position: relative;top: -50px;float: right;">
                      <%= form_tag payments_path, method: 'GET' do %>
                        <%= text_field_tag :from_date,'', placeholder: "#{params[:from_date] ? params[:from_date] : 'From Date'}", id: 'from_date', style: "width: 190px; padding: 10px; border: 1px solid lightskyblue; border-radius: 5px;" %>
                        -
                        <%= text_field_tag :end_date,'', placeholder: "#{params[:end_date] ? params[:end_date] : 'End Date'}", id: 'end_date', style: "width: 190px; padding: 10px; border: 1px solid lightskyblue; border-radius: 5px;" %>
                        <%= submit_tag "Search", class: 'btn btn-sm btn-primary' %>
                        <% end %>
                    </div>
                    <div id='payments'>
                        <%= render :partial => 'index' %>
                    </div>
                </div>
            </div>
        </body>
    </html>
    <script>
      $("#from_date, #end_date").datepicker({
          dateFormat: 'yy-mm-dd',
          changeMonth: true,
          changeYear: true,
          maxDate: 0
      });
    </script>