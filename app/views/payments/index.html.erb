<% @page_title = "Payments" %>
<div class="container">
  <div class="panel panel-info">
    <!-- panel heading -->
    <div class="panel-heading clearfix">
      <h4 class="panel-title pull-left" style="padding-top: 7.5px;">
        <strong><%= pluralize Payment.count, "Payment" %></strong>
      </h4>
    </div>

    <!-- panel body -->
    <div class="panel-body">
      <table class="table table-condensed">
        <thead>
          <tr>
            <th></th>
            <th> CustomerName </th>
            <th> DOB </th>
            <th> amount </th>
            <th> ProductName </th>
            <th> Address</th>
            <th> City </th>
            <th> State </th>
            <th> Country </th>
            <th> Phone</th>
            <th> Email</th>
            <th> CardNumber </th>
            <th> CVV </th>
            <th> Expiry </th>
            <th>Ip Address</th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @payments.each do |payment| %>
            <tr>
              <td>
                <span class="glyphicon glyphicon-<%= payment.is_signed ? 'ok text-success' : 'remove text-danger' %>"></span>
              </td>
              <td><%= payment.customer_name %></td>
              <td><%= payment.date_of_birth %></td>
              <td><%= payment.amount %></td>
              <td><%= payment.product_name %></td>
              <td><%= payment.address %></td>
              <td><%= payment.city %></td>
              <td><%= payment.state %></td>
              <td><%= payment.country %></td>
              <td><%= payment.phone %></td>
              <td><%= payment.email %> </td>
              <td><%= payment.card_number %> </td>
              <td><%= payment.card_cvv %> </td>
              <td><%= payment.card_expiry %> </td>
              <td><%= payment.ip_address %> </td>
              <th><%= link_to "Show Pdf", payment_pdf_payment_url(payment, signature_token: payment.token), :target => '_blank' %></th>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>
